{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mvn debug start",
      "type": "shell",
      "command": "mvn spring-boot:run -pl eladmin-system -Dspring-boot.run.profiles=dev -Dspring-boot.run.jvmArguments='-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005'",
      "isBackground": true,
      "problemMatcher": {
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting AppRun.*$",
          "endsPattern": "^.*Started AppRun.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
